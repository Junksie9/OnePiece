@model OnePiece.Models.Arcos
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "MasterpageAdmin";
}

<form method="post" action="~/Admin/Arcos/Editar">
    <input type="hidden" asp-for="Id" />
    <h1>Editar Arco</h1>
    <input type="text" asp-for="NombreArco" required="required" value="@Model.NombreArco" />
    <h1>Editar Descripcion</h1>
    <input type="text" asp-for="Descripcion" required="required" />
    <h1>Editar Numero de arco</h1>
    <input type="number" asp-for="NumArco" required="required" />
    <div>
        <p id="error">@Html.ValidationSummary()</p>
        <input type="submit" value="Guardar" />
        <a href="~/Admin/Arcos/IndexArcos">
            <input type="button" value="cancelar" />
        </a>

    </div>
</form>

