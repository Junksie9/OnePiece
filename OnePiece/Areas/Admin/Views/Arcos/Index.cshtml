@model IEnumerable<OnePiece.Models.Arco>
@{
    Layout = "MasterpageAdmin";
}

<section>
    <a href="~/Admin/Arcos/Agregar">Nuevo Arco</a>


    @foreach (var item in Model)
    {
        <div>
            <h1>@item.NombreArco</h1>
            <div>
                <a href="~/Admin/Arcos/Editar/@item.IdArco">Editar</a>
                <a href="~/Admin/Arcos/Eliminar/@item.IdArco">Eliminar</a>
            </div>
        </div>
    }
</section>
