
@{
    Layout = "MasterpageAdmin";
}

<form method="post">
    <a href="~/Admin/Arcos/Agregar">Nuevo Arco</a>


    @foreach (var item in Model)
    {
        <div>
            <h1>@item.NombreArco</h1>
            <div>
                <a href="~/Admin/Arcos/Editar/@item.IdArco"></a>
                <a href="~/Admin/Arcos/Eliminar/@item.IdArco"></a>
            </div>
        </div>
    }
</form>
