@model IEnumerable<OnePiece.Models.Capitulos>
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment env
@{
    Layout = "Masterpage";
}

<head>
    <link href="~/css/estilosP.css" rel="stylesheet" />
</head>

<h1>Lista de episodios</h1>
@foreach (var item in Model)
{
    <li>
        <a href="~/@item.IdArcoNavigation.NombreArco.Replace(" ","-")/@item.NombreCapitulo.Replace(" ","-")">
            <h1>One Piece Cap @item.NumCap - @item.NombreCapitulo</h1>
            <div>
                @if (System.IO.File.Exists($"{env.WebRootPath}/img_capitulos/{item.Id}.jpg"))
                {
                    <img src="~/img_capitulos/@(item.Id).jpg" style="height:200px;width:400px;" />
                }
                else
                {
                    <img src="~/img_capitulos/nophoto.jpg" style="height:200px;width:400px;" />
                }
            </div>
        </a>
    </li>
}
